          "name": "Get All Roles (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {\r",
                  "    const response = pm.response.json();\r",
                  "    if (response.roles && response.roles.length > 0) {\r",
                  "        // Buscar ROLE_ADMIN\r",
                  "        const adminRole = [...response.roles].find(r => r.name === \"ROLE_ADMIN\");\r",
                  "        if (adminRole) {\r",
                  "            pm.environment.set(\"role_id\", adminRole.id);\r",
                  "            console.log(\"âœ… ROLE_ADMIN ID saved: \" + adminRole.id);\r",
                  "        }\r",
