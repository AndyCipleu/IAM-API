          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {\r",
                  "    const response = pm.response.json();\r",
                  "    pm.environment.set(\"user_id\", response.id);\r",
                  "    console.log(\"âœ… User registered with ID: \" + response.id);\r",
                  "}"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\r\n  \"email\": \"admin@test.com\",\r\n  \"password\": \"Admin123\",\r\n  \"firstName\": \"Admin\",\r\n  \"lastName\": \"User\"\r\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            }
          },
          "response": []
        },
